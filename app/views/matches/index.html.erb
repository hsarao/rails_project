<p id="notice"><%= notice %></p>

<h1>Matches</h1>

<table>
  <thead>
    <tr>
      <th>Date</th>
      <!--<th>Score1</th>-->
      <!--<th>Score2</th>-->
      <th>Team 1</th>
      <th>Team 2</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @matches.each do |match| %>
      <tr>
        <td><%= match.date %></td>
        <!--<td><%= match.score1 %></td>-->
        <!--<td><%= match.score2 %></td>-->

          <% match.teams.pluck(:name).each do |t| %>
            <td><%= t %></td>
          <% end %>
        <td><%= link_to 'Show', match %></td>
        <td><%= link_to 'Edit', edit_match_path(match) %></td>
        <td><%= link_to 'Destroy', match, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Match', new_match_path %>
